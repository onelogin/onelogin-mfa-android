<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:keepScreenOn="true">

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/onelogin_mfa_qr_scanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:zxing_framing_rect_width="255dp"
        app:zxing_framing_rect_height="255dp">

        <ImageView
            android:id="@+id/onelogin_mfa_qr_scanner_border"
            android:layout_width="255dp"
            android:layout_height="255dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/onelogin_mfa_otp_qr_scan_border" />

        <ImageView
            android:id="@+id/onelogin_mfa_qr_scanner_accept"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/onelogin_mfa_otp_qr_scan_accept"  />

    </com.journeyapps.barcodescanner.DecoratedBarcodeView>

</merge>